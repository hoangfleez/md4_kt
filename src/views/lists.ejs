<body class="bg-light">
<div class="container-fluid p-0">
    <h2>List Student</h2>
    <div class="p-2 bd-highlight" style="margin-left: 1200px">
        <a href="/infos/create">
            <button type="button" class="btn btn-info">Add Student</button>
        </a>
    </div>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">FullName</th>
                <th scope="col">Claas</th>
                <th scope="col">Describe</th>
            </tr>
            </thead>
            <tbody>
            <% for(const info of infos) { %>
            <tr>
                <td><a href="/infos/showStudent/<%= info._id %>"> <%= info.fullName %></a></td>
                <td><%= info.class %></td>
                <td><%= info.describe %></td>
                <th>
                    <a href="/infos/update/<%= info.id %>" class="btn btn-primary">Update</a>
                    <a onclick="return confirm('Are you sure you want to delete this info?')"
                       href="/infos/delete/<%= info.id %>" class="btn btn-danger">Delete</a>
                </th>
            </tr>
            <% } %>
            </tbody>
        </table>


</div>
</body>

